<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeAdmin">

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="MenÃº"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/buttonLogin"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        tools:ignore="MissingConstraints">

        <Button
            android:id="@+id/button_agregar_cliente"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/buttonLogin"
            android:text="Agregar Cliente"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColorLink="@color/buttonLogin"
            android:textSize="20sp"
            android:typeface="normal" />

        <Button
            android:id="@+id/button_Cobrar_cuota"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/buttonLogin"
            android:text="Pagar cuota"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_cuotas_que_vencen_hoy"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/buttonLogin"
            android:text="Ver cuotas que vencen hoy"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_configuracion"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/buttonLogin"
            android:text="Ver Clientes"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
